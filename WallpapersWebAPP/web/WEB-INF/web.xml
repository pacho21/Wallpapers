<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>servlets.DBListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>InsertImage</servlet-name>
        <servlet-class>servlets.InsertImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Authentification</servlet-name>
        <servlet-class>servlets.Authentification</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetSomeImages</servlet-name>
        <servlet-class>servlets.GetSomeImages</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DbListener</servlet-name>
        <servlet-class>servlets.DbListener</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllImages</servlet-name>
        <servlet-class>servlets.GetAllImages</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadImage</servlet-name>
        <servlet-class>servlets.UploadImage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertImage</servlet-name>
        <url-pattern>/InsertImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Authentification</servlet-name>
        <url-pattern>/Authentification</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetSomeImages</servlet-name>
        <url-pattern>/GetSomeImages</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DbListener</servlet-name>
        <url-pattern>/DbListener</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllImages</servlet-name>
        <url-pattern>/GetAllImages</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadImage</servlet-name>
        <url-pattern>/UploadImage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
